<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/jqplot/css")
    @Styles.Render("~/Content/pivot/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqplot")
    @Scripts.Render("~/bundles/jqplot_plugin")
    @Scripts.Render("~/bundles/json_stat")
    @Scripts.Render("~/bundles/pivot")
    <script type="text/javascript" src="https://www.google.com/jsapi">

       
    </script>
    <script type="text/javascript">

        function changeLanguage(lang) {
            if (lang == 'al') {
                location.href = "@Url.Action("Albanian", "Home")";
            }
            else {
                location.href = "@Url.Action("English", "Home")";
            }
        }
    </script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>   
                
                @Html.ActionLink("INSTAT", "Index", "Home", null, new { @class = "navbar-brand" })
               
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                    
                    <li>@Html.ActionLink(Resources.Home , "Index", "Home")</li>
                    <li>@Html.ActionLink(Resources.About, "About", "Home")</li>
                    <li>@Html.ActionLink(Resources.Publications, "Index", "Book")</li>
                    <li>@Html.ActionLink(Resources.Contact, "Contact", "Home")</li>

                </ul>
                <div class="btn-group nav navbar-nav navbar-right">
                    <button type="button" id="al" onclick="location.href = '@Url.Action("Albanian", "Home")'" class="btn btn-default">Al</button>
                    <button type="button" id="en" onclick="location.href = '@Url.Action("English", "Home")'" class="btn btn-default">En</button>

                </div>
               @* @Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


    @RenderSection("scripts", required: false)
</body>
</html>
